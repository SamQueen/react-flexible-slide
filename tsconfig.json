{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "dom",
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist/esm",
        "sourceMap": true,
        "strict": true,
        "target": "ES6"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}